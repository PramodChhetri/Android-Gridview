<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubsDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L.O.D"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:id="@+id/tvDClubName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_margin="20dp"
                android:id="@+id/ivDClubImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/tvDClubName"
                android:src="@drawable/allthatjazz"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dance Club"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tvDClubType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivDClubImg"
                android:textColor="#888"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thamel, Kathmandu"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:id="@+id/tvDClubAddress"
                app:layout_constraintStart_toStartOf="@id/tvDClubType"
                app:layout_constraintTop_toBottomOf="@id/tvDClubType"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#999"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEventHeading"
                android:text="Events"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#999999"
                app:layout_constraintStart_toStartOf="@id/tvDClubAddress"
                app:layout_constraintTop_toBottomOf="@id/tvDClubAddress"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event list"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:id="@+id/tvEvents"
                app:layout_constraintStart_toStartOf="@id/tvEventHeading"
                app:layout_constraintTop_toBottomOf="@id/tvEventHeading"
                android:textColor="#888"
                android:paddingBottom="16dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>